
<div class="container">
  <h2>Edit room</h2>
<%= form_for @room do |f| %>



<div class="form-group">
  <%= f.label :title, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :title, class: "form-control opacity" %>
    </br>
  </div>
</div>

<div class="form-group">
  <%= f.label :text, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :text, class: "form-control opacity" %>
    </br>
  </div>
</div>

<div class="form-group">
			<div class="text-center">

  <div class="form-group">
      <button type="submit" class="btn btn-success btn-circle btn-outline glyphicon glyphicon-ok"></button>
      <%= link_to "", rooms_path, class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-arrow-left" %>
</div>
  </div>
  </div>
</div>
<% end %>
